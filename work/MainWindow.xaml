<Window x:Class="work.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:work"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid  Background="MistyRose">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Margin="10">
            <Button x:Name="buttonView"
                    Content="Вход"
                    Width="300"
                    Height="50"
                    FontSize="20"
                    Click="buttonView_Click"
                    ToolTip="Перейти на страницу " Background="Pink"/>
            <Button Content="Выход"
                    FontSize="20"
                    Height="50"
                    Margin="4"
                    Width="300"
                    x:Name="buttonClothes"
                    Click="buttonClothes_Click"
                    ToolTip="Выйти" Background="Pink"/>
        </StackPanel>
    </Grid>
</Window>
